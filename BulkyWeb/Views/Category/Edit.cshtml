@model Category

<form method="post">
    <div class="border p-5 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="mb-2">Category Name</label>
            <input asp-for="Name" class="form-control border" />
            <span asp-validation-for="Name" class="text-danger mt-1"></span>
        </div>
        <div class="mb-3 ">
            <label asp-for="DisplayOrder" class="mb-2">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control border" />
            <span asp-validation-for="DisplayOrder" class="text-danger mt-1"></span>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"></partial>
    }
}